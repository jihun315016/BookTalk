<script>
    window.onload = function () {
        OnLoadView();
    }

    function OnLoadView() {
        var sSuccessMessage = "@Html.Raw(TempData["SuccessMessage"])"; // 회원가입 성공 메세지
        var sErrorMessage = "@Html.Raw(ViewBag.ErrorMessage)"; // 오류 메세지

        if (sSuccessMessage) {
            alert(sSuccessMessage);
        }
        else if (sErrorMessage) {
            alert(sErrorMessage);
        }
    }
</script>

