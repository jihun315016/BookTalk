<div class="container mt-4">
    <div class="card">
        <img src="@Model.Cover" class="card-img-top" alt="책 표지">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.BookName</h6>
            <p class="card-text">@Model.Content</p>
            <p class="card-text"><small class="text-muted">작성자: @Model.UserId, 작성일: @Model.CreateDate</small></p>
            <p class="card-text">평점: @Model.Rating</p>
            <div>
                <button type="button" class="btn btn-success">좋아요 @Model.LikeCount</button>
                <button type="button" class="btn btn-danger">싫어요 @Model.DislikeCount</button>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>댓글 달기</h4>
        <form>
            <div class="form-group">
                <textarea class="form-control" rows="3" placeholder="댓글을 입력하세요..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">댓글 작성</button>
        </form>
    </div>
</div>
